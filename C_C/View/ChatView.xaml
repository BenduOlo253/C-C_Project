<Window x:Class="C_C.View.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C_C.View"
        xmlns:vm="clr-namespace:C_C.ViewModel"
        mc:Ignorable="d"
        Title="C&amp;C App - Chat" Height="800" Width="450"
        WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        
        x:Name="ChatWindow">

    <Window.Resources>
        
        <SolidColorBrush x:Key="FondoPrincipal" Color="#001f3f"/>
        <SolidColorBrush x:Key="AcentoPrincipal" Color="#00bfff"/>
        <SolidColorBrush x:Key="FondoClaro" Color="#F0F8FF"/>
        <SolidColorBrush x:Key="TextoGris" Color="#555"/>
        <SolidColorBrush x:Key="BurbujaMia" Color="#0078D7"/>
        <SolidColorBrush x:Key="BurbujaDeOtro" Color="#E1E1E1"/>

        
        <vm:BurbujaChatTemplateSelector x:Key="SelectorDeBurbuja">

            
            <vm:BurbujaChatTemplateSelector.PlantillaMia>
                <DataTemplate>
                    <Border Background="{StaticResource BurbujaMia}" CornerRadius="15,15,0,15"
                            Padding="10" Margin="60,5,5,5" HorizontalAlignment="Right" MaxWidth="300">
                        <TextBlock Text="{Binding Contenido}" Foreground="White" TextWrapping="Wrap"/>
                    </Border>
                </DataTemplate>
            </vm:BurbujaChatTemplateSelector.PlantillaMia>

           
            <vm:BurbujaChatTemplateSelector.PlantillaDeOtro>
                <DataTemplate>
                    <Border Background="{StaticResource BurbujaDeOtro}" CornerRadius="15,15,15,0"
                            Padding="10" Margin="5,5,60,5" HorizontalAlignment="Left" MaxWidth="300">
                        <TextBlock Text="{Binding Contenido}" Foreground="Black" TextWrapping="Wrap"/>
                    </Border>
                </DataTemplate>
            </vm:BurbujaChatTemplateSelector.PlantillaDeOtro>

        </vm:BurbujaChatTemplateSelector>
    </Window.Resources>

    <Grid Background="{StaticResource FondoClaro}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          
            <RowDefinition Height="*"/>
           
            <RowDefinition Height="Auto"/>
           
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="{StaticResource FondoPrincipal}" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                
                <Button Grid.Column="0" Content="&lt;" Foreground="{StaticResource AcentoPrincipal}" 
                        FontSize="24" FontWeight="Bold" Background="Transparent" BorderThickness="0" 
                        VerticalAlignment="Center"
                        Command="{Binding VolverAHomeCommand}"
                        CommandParameter="{Binding ElementName=ChatWindow}"/>

               
                <Ellipse Grid.Column="1" Width="40" Height="40" VerticalAlignment="Center" Margin="10,0">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding FotoDestinatario}" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

               
                <TextBlock Grid.Column="2" Text="{Binding NombreDestinatario}" Foreground="White" 
                           FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
        </Border>

     
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="5">
            <ItemsControl ItemsSource="{Binding Mensajes}"
                          ItemTemplateSelector="{StaticResource SelectorDeBurbuja}"/>
        </ScrollViewer>

       
        <Border Grid.Row="2" Background="White" BorderBrush="LightGray" BorderThickness="0,1,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                
                <TextBox Grid.Column="0" Text="{Binding MensajeNuevo, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" Padding="10" VerticalContentAlignment="Center"
                         BorderBrush="LightGray" BorderThickness="1"
                         AcceptsReturn="False"/>
                

               
                <Button Grid.Column="1" Content="Enviar" FontSize="16" FontWeight="Bold" 
                        Padding="15,10" Margin="10,0,0,0"
                        Command="{Binding EnviarMensajeCommand}"/>
            </Grid>
        </Border>

    </Grid>
</Window>
