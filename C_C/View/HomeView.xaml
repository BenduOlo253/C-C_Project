<Window x:Class="C_C.View.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C_C.View"
        mc:Ignorable="d"
        Title="C&amp;C App - Home" Height="800" Width="450"
        WindowStyle = "SingleBorderWindow" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="False"
        
        x:Name="HomeWindow">
    
    <Window.Resources>
       
        <SolidColorBrush x:Key="FondoPrincipal" Color="#001f3f"/>
        <SolidColorBrush x:Key="AcentoPrincipal" Color="#00bfff"/>
        <SolidColorBrush x:Key="BotonRechazar" Color="#FF0000"/>
        <SolidColorBrush x:Key="BotonAceptar" Color="#008000"/>

       
        <Style x:Key="BotonPerfil" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                           
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BotonIcono" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="BotonRedondo" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="35">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

       
        <Storyboard x:Key="ShowMenu">
            <DoubleAnimation Storyboard.TargetName="MenuTransform" Storyboard.TargetProperty="X" From="280" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Overlay" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="HideMenu" Completed="AnimacionOcultarMenu_Completed">
            <DoubleAnimation Storyboard.TargetName="MenuTransform" Storyboard.TargetProperty="X" From="0" To="280" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Overlay" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>

    </Window.Resources>


    <Grid>
        <Border CornerRadius="30" Background="{StaticResource FondoPrincipal}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

               
                <Border Grid.Row="0" Background= "#0097b2" CornerRadius="30,30,0,0" Padding="15,25,15,15">
                    <Grid Margin="0,-3,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        
                        <Button Grid.Column="0" Width="40" Height="40" Style="{StaticResource BotonPerfil}"
                                VerticalAlignment="Center"
                                Command="{Binding IrAMiPerfilCommand}"
                                CommandParameter="{Binding ElementName=HomeWindow}"/>

                        
                        <Image Source="pack://application:,,,/Resources/Images/C_C_LOGO.png" Grid.Column="1" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                        
                        <Button x:Name="BotonMostrarMenu" Grid.Column="2" Style="{StaticResource BotonIcono}"
                                VerticalAlignment="Center" Click="BotonMostrarMenu_Click">
                            <Image Source="pack://application:,,,/Resources/Images/Ajustes_Icon.png" Height="30" Width="30" />
                        </Button>
                    </Grid>
                </Border>

                
                <Grid Grid.Row="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="20">
                        
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding FotoActual}" Stretch="UniformToFill"/>
                        </Border.Background>

                        <Grid>
                            
                            <Button Content="&lt;" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="White" Background="#80000000" BorderThickness="0" Margin="10,0" Cursor="Hand"
                                    Command="{Binding FotoAnteriorCommand}"/>

                          
                            <Button Content="&gt;" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="White" Background="#80000000" BorderThickness="0" Margin="10,0" Cursor="Hand"
                                    Command="{Binding SiguienteFotoCommand}"/>

                            <Border VerticalAlignment="Bottom" CornerRadius="0,0,20,20">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                        <GradientStop Color="#CC000000" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Margin="20">
                                    
                                    <TextBlock Text="{Binding PerfilActual.NikName}" FontSize="32" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="{Binding PerfilActual.Biografia}" FontSize="20" Foreground="White"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        
                        <Button Width="70" Height="70" Style="{StaticResource BotonRedondo}" Background="{StaticResource BotonRechazar}" Margin="0,0,40,0"
                                Command="{Binding DislikeCommand}">
                            <TextBlock Text="✕" FontSize="36" Foreground="White"/>
                        </Button>
                        
                        <Button Width="70" Height="70" Style="{StaticResource BotonRedondo}" Background="{StaticResource BotonAceptar}"
                                Command="{Binding LikeCommand}">
                            <TextBlock Text="♥" FontSize="36" Foreground="White" Margin="0,-5,0,0"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        
        <Border x:Name="Overlay" 
                Background="#80000000" 
                Visibility="Collapsed" 
                Opacity="0"
                MouseDown="Overlay_Click"/>

        
        <Border x:Name="MenuLateral"
                Grid.RowSpan="2"
                Width="280"
                HorizontalAlignment="Right"
                Background="White"
                Visibility="Collapsed">
            <Border.RenderTransform>
                <TranslateTransform x:Name="MenuTransform" X="280"/>
            </Border.RenderTransform>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                
                <StackPanel Grid.Row="0" Background="#001f3f" >
                    <Button x:Name="BotonCerrarMenu" Content="✕" FontSize="20" FontWeight="Bold" Foreground="White" 
                            Background="Transparent" BorderThickness="0" Cursor="Hand" 
                            HorizontalAlignment="Right" Margin="10" Click="BotonCerrarMenu_Click"/>
                    <TextBlock Text="Menú" Foreground="White" FontSize="24" FontWeight="Bold" Margin="20,0,20,20"/>
                </StackPanel>

                
                <StackPanel Grid.Row="1" Margin="10">
                    <Button Content="Mi Perfil" FontSize="18" Padding="15" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Left" Cursor="Hand"
                            Command="{Binding IrAMiPerfilCommand}"
                            CommandParameter="{Binding ElementName=HomeWindow}"/>
                    <Button Content="Chats" FontSize="18" Padding="15" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Left" Cursor="Hand"
                            Command="{Binding IrAChatsCommand}"
                            CommandParameter="{Binding ElementName=HomeWindow}"/>
                    <Button Content="Configuración" FontSize="18" Padding="15" BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Left" Cursor="Hand"
                            Command="{Binding IrAConfiguracionCommand}"
                            CommandParameter="{Binding ElementName=HomeWindow}"/>
                </StackPanel>

                
                <Button Grid.Row="2" Content="Cerrar Sesión" FontSize="18" Padding="15" BorderThickness="0" 
                        Background="Transparent" HorizontalContentAlignment="Left" Cursor="Hand" 
                        Foreground="Red" Margin="10"
                        Command="{Binding CerrarSesionCommand}"
                        CommandParameter="{Binding ElementName=HomeWindow}"/>
            </Grid>
        </Border>
    </Grid>
</Window>

